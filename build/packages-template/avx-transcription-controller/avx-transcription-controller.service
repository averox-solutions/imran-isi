[Unit]
Description=Averox Transcription Controller
Wants=redis-server.service
After=syslog.target network.target redis-server.service freeswitch.service avx-apps-akka.service
PartOf=averox.target

[Service]
WorkingDirectory=/usr/local/averox/avx-transcription-controller
ExecStart=/usr/bin/node app.js
Restart=always
SyslogIdentifier=avx-transcription-controller
User=averox
Group=averox
Environment=NODE_ENV=production
Environment=NODE_CONFIG_DIR=/etc/averox/avx-transcription-controller/:/usr/local/averox/avx-transcription-controller/config/

[Install]
WantedBy=multi-user.target averox.target
