[Unit]
Description=Averox WebRTC Recorder
Wants=redis-server.service
After=syslog.target network.target redis-server.service
PartOf=averox.target

[Service]
EnvironmentFile=-/etc/default/avx-webrtc-recorder
ExecStart=/usr/bin/avx-webrtc-recorder $ARGS
SyslogIdentifier=avx-webrtc-recorder
Restart=always
User=averox
Group=averox
RestartSec=3s
Nice=-10

[Install]
WantedBy=multi-user.target averox.target
