server {
    listen   80;
    listen [::]:80;
    server_name  192.168.0.103;

    access_log  /var/log/nginx/averox.access.log;

    # This variable is used instead of $scheme by averox nginx include
    # files, so $scheme can be overridden in reverse-proxy configurations.
    set $real_scheme $scheme;

    # Averox assets and static content.
    location / {
      root   /var/www/averox-default/assets;
      index  index.html index.htm;
      expires 1m;
    }

    # Include specific rules for record and playback
    include /etc/averox/nginx/*.nginx; # an overriding set of files, possibly present
}
