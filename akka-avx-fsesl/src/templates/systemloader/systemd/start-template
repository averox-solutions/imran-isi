[Unit]
Description=Averox FS-ESL (Akka)
Requires=network.target
Wants=redis-server.service freeswitch.service
After=redis-server.service freeswitch.service
PartOf= averox.target

[Service]
Type=simple
WorkingDirectory=/usr/share/avx-fsesl-akka
EnvironmentFile=/etc/default/avx-fsesl-akka
ExecStart=/usr/share/avx-fsesl-akka/bin/avx-fsesl-akka
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
RestartSec=60
SuccessExitStatus=143
TimeoutStopSec=5
User=averox
ExecStartPre=/bin/mkdir -p /run/avx-fsesl-akka
ExecStartPre=/bin/chown averox:averox /run/avx-fsesl-akka
ExecStartPre=/bin/chmod 755 /run/avx-fsesl-akka
PermissionsStartOnly=true
LimitNOFILE=1024

[Install]
WantedBy=multi-user.target  averox.target

